<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:text="Sensors" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SENSORS"
            android:textSize="23sp"
            android:paddingLeft="10dp"
            android:textColor="#C675FF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light"
            android:textSize="18sp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proximity"

            android:textSize="18sp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gravity"

            android:textSize="18sp"
            android:layout_marginTop="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VALUES"
            android:textSize="23sp"
            android:textStyle="italic"
            android:paddingLeft="10dp"
            android:textColor="#C675FF" />

        <TextView
            android:id="@+id/txtLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value Light"
            android:textColor="#B1B1B1"

            android:textSize="14sp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/txtProximity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value Proximity"

            android:textSize="14sp"
            android:layout_marginTop="25dp"
            android:textColor="#B1B1B1" />

        <TextView
            android:id="@+id/txtGravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value Gravity"

            android:textSize="14sp"
            android:layout_marginTop="25dp"
            android:textColor="#B1B1B1" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp">

            <ImageButton
                android:id="@+id/btnStartLight"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/start"
                android:layout_marginTop="25dp"/>
            <ImageButton
                android:id="@+id/btnStartProximity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/start"
                android:layout_marginTop="25dp"/>
            <ImageButton
                android:id="@+id/btnStartGravity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/start"
                android:layout_marginTop="25dp"/>
        </LinearLayout>
    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>